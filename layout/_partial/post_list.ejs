<div class="space-y-6">
  <!-- 文章项1 -->
  <% page.posts.each(function (post) { %>
  <div class="bg-white p-6 rounded-lg shadow hover:shadow-md transition">
    <div class="flex justify-between items-center mb-2">
      <span class="text-sm text-purple-600 font-semibold">技术文章</span>
      <span class="text-sm text-gray-500"
        ><%- date(post.date, "YYYY-MM-DD") %></span
      >
    </div>
    <h3
      class="text-xl font-bold mb-2 text-gray-800 hover:text-purple-600 transition"
    >
      <a href="<%- url_for(post.path) %>"><%- post.title %></a>
    </h3>
    <p class="text-gray-600 mb-3">
      <%- strip_html(post.content).substr(0, 100) %>...
    </p>
    <a
      href="<%- url_for(post.path) %>"
      class="text-purple-600 hover:text-purple-800 font-medium"
      >阅读全文 →</a
    >
  </div>
  <% }) %>
</div>
