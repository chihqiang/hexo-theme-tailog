        <div class="grid md:grid-cols-2 gap-8">
            <% page.posts.each(function (post) { %>
            <!-- 文章卡片1 -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition duration-500 hover:shadow-2xl hover:-translate-y-1">
            
                <div class="p-6">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-sm text-purple-600 font-semibold">技术文章</span>
                        <span class="text-sm text-gray-500"><%- date(post.date, "YYYY.MM.DD") %></span>
                    </div>
                    <h3 class="text-xl font-bold mb-3 text-gray-800 hover:text-purple-600 transition">
                        <a href="<%- url_for(post.path) %>"><%= post.title %></a>
                    </h3>
                    <p class="text-gray-600 mb-4"><%- strip_html(post.content).substr(0, 100) %>...</p>
                    <a href="<%- url_for(post.path) %>" class="inline-block px-4 py-2 bg-gradient-to-r from-purple-500 to-blue-500 text-white rounded-full hover:shadow-md transition">
                        阅读全文
                    </a>
                </div>
            </div>
            <% }) %>
        </div>