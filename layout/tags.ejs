<% function randomColor() { 
  const colors = [
    'from-pink-400 to-purple-400',
    'from-purple-400 to-blue-400',
    'from-blue-400 to-teal-400',
    'from-yellow-400 to-orange-400',
    'from-green-400 to-blue-400',
    'from-red-400 to-pink-400',
    'from-indigo-400 to-purple-400',
    'from-teal-400 to-green-400'
  ];
  return colors[Math.floor(Math.random() * colors.length)];
} %>
<div class="tag-cloud flex flex-wrap justify-center gap-4 my-8">
  <% if (site.tags.size() > 0) { %>
    <% site.tags.sort('name').forEach(function(tag){ %>
      <a
        href="<%= url_for(tag.path) %>"
        class="rotate-animation px-6 py-3 bg-gradient-to-r <%= randomColor() %> text-white rounded-full shadow-lg hover:shadow-xl transition duration-300 text-lg font-medium"
      >
        <%= tag.name %> (<%= tag.length %>)
      </a>
    <% }) %>
  <% } %>
</div>
